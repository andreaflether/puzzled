<div class="row">
  <div class="col-sm-6">
    <h1><%= plural_table_name.capitalize %></h1>
  </div>

  <div class="col-sm-6 float-right">
    <%%= link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary' do %>
      Add New <%= human_name %>
    <%% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <% attributes.each do |attribute| -%>
          <th><%= attribute.human_name %></th>
        <% end -%>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name%>.each do |<%= singular_table_name %>| %>
        <%%= content_tag :tr, id: dom_id(<%= singular_table_name %>), class: dom_class(<%= singular_table_name %>) do %>
          <% attributes.each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>

          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%%= link_to <%= singular_table_name %>, class: 'btn btn-success' do %>
                <i class="fas fa-eye"></i>
              <%% end %>
          
              <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-info' do %>
                <i class="fas fa-edit"></i>
              <%% end %>
        
              <%%= link_to <%= model_resource_name %>, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash"></i>
              <%% end %>
            </div>
          </td>
        <%% end %>
      <%% end %>
    </tbody>
  </table>
</div>
