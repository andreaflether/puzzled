<div class="row">
  <div class="col-sm-6">
    <h1>Grids</h1>
  </div>

  <div class="col-sm-6 float-right">
    <%= link_to new_grid_path, class: 'btn btn-primary' do %>
      Add New Grid
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
                  <th>Difficulty</th>
                  <th>Nationality</th>
                  <th>User</th>
                <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @grids.each do |grid| %>
        <%= content_tag :tr, id: dom_id(grid), class: dom_class(grid) do %>
                      <td><%= grid.difficulty %></td>
                      <td><%= grid.nationality %></td>
                      <td><%= grid.user %></td>
          
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to grid, class: 'btn btn-success' do %>
                <i class="fas fa-eye"></i>
              <% end %>
          
              <%= link_to edit_grid_path(grid), class: 'btn btn-info' do %>
                <i class="fas fa-edit"></i>
              <% end %>
        
              <%= link_to grid, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
