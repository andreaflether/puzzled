<% content_for :devise_form do %>
  <% content_for :page_title do %>
    Sign up
  <% end %>

  <div class="ui form <%= "error" if resource.errors.any? %>">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), autocomplete: 'off') do |f| %>
      <%= devise_error_messages! %>

      <%= f.input :email,
          autocomplete: 'off', 
          placeholder: 'example@mail.com', 
          required: true %>

      <div class="two fields">
        <%= f.input :name, 
            autocomplete: 'off',
            placeholder: 'Full name' %>

        <%= f.input :username,
        placeholder: 'Username' %>
      </div>

      <div class="two fields">
        <%= f.input :password, 
            autocomplete: 'off',
            placeholder: "Password",
            required: true %>

        <%= f.input :password_confirmation, 
          autocomplete: 'off',
          required: true,
          placeholder: 'Password confirmation' %>
      </div>

      <div class="ui one column center aligned grid">
        <div class="sixteen wide column">
          <%= button_tag class: 'ui justified right submit button primary' do %>
            <i class="users icon"></i> Sign up 
          <% end %>
        </div>
      </div>
    <% end %>
    
    <%= render 'devise/shared/links' %>
  <% end %>

<%= render 'devise/shared/form_wrap' %>